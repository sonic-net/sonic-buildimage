[Unit]
Description=Accton AS7535-32XB Platform Monitoring service
Before=pmon.service
After=sysinit.target
DefaultDependencies=no

[Service]
Type=oneshot
ExecStart=/usr/local/bin/accton_as7535_32xb_util.py install
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL
TimeoutSec=300

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
