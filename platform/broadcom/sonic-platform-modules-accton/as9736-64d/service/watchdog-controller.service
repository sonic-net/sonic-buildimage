[Unit]
Description=watchdog control service
Before=pmon.service
After=as9736-64d-platform-init.service

[Service]
ExecStartPre=/usr/local/bin/check_for_mask.py
ExecStartPre=/usr/local/bin/watchdogloader.py
ExecStart=/usr/local/bin/watchdogd.py
KillSignal=SIGTERM
TimeoutStopSec=10
Restart=always
RestartSec=5

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
