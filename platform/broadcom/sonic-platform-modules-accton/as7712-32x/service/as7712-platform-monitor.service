[Unit]
Description=Accton AS7712 Platform Monitoring service
Before=pmon.service
After=as7712-platform-init.service
DefaultDependencies=no

[Service]
ExecStart=/usr/local/bin/accton_as7712_monitor.py
KillSignal=SIGKILL
SuccessExitStatus=SIGKILL

# Resource Limitations
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
