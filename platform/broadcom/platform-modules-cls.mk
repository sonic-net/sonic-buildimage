# Celestica Platform modules

CLS_DS1000_PLATFORM_MODULE_VERSION = 1.0
CLS_DS2000_PLATFORM_MODULE_VERSION = 1.0
CLS_DS3000_PLATFORM_MODULE_VERSION = 1.0
CLS_DS4000_PLATFORM_MODULE_VERSION = 1.0

export CLS_DS1000_PLATFORM_MODULE_VERSION
export CLS_DS2000_PLATFORM_MODULE_VERSION
export CLS_DS3000_PLATFORM_MODULE_VERSION
export CLS_DS4000_PLATFORM_MODULE_VERSION

CLS_DS1000_PLATFORM_MODULE = platform-modules-ds1000_$(CLS_DS1000_PLATFORM_MODULE_VERSION)_amd64.deb
$(CLS_DS1000_PLATFORM_MODULE)_SRC_PATH = $(PLATFORM_PATH)/sonic-platform-modules-cls
$(CLS_DS1000_PLATFORM_MODULE)_DEPENDS += $(LINUX_HEADERS) $(LINUX_HEADERS_COMMON) $(PDDF_PLATFORM_MODULE_SYM)
$(CLS_DS1000_PLATFORM_MODULE)_PLATFORM = x86_64-cls_ds1000-r0
SONIC_DPKG_DEBS += $(CLS_DS1000_PLATFORM_MODULE)

CLS_DS2000_PLATFORM_MODULE = platform-modules-ds2000_$(CLS_DS2000_PLATFORM_MODULE_VERSION)_amd64.deb
$(CLS_DS2000_PLATFORM_MODULE)_PLATFORM = x86_64-cls_ds2000-r0
$(eval $(call add_extra_package,$(CLS_DS1000_PLATFORM_MODULE),$(CLS_DS2000_PLATFORM_MODULE)))

CLS_DS3000_PLATFORM_MODULE = platform-modules-ds3000_$(CLS_DS3000_PLATFORM_MODULE_VERSION)_amd64.deb
$(CLS_DS3000_PLATFORM_MODULE)_PLATFORM = x86_64-cls_ds3000-r0
$(eval $(call add_extra_package,$(CLS_DS1000_PLATFORM_MODULE),$(CLS_DS3000_PLATFORM_MODULE)))

CLS_DS4000_PLATFORM_MODULE = platform-modules-ds4000_$(CLS_DS4000_PLATFORM_MODULE_VERSION)_amd64.deb
$(CLS_DS4000_PLATFORM_MODULE)_PLATFORM = x86_64-cls_ds4000-r0
$(eval $(call add_extra_package,$(CLS_DS1000_PLATFORM_MODULE),$(CLS_DS4000_PLATFORM_MODULE)))
