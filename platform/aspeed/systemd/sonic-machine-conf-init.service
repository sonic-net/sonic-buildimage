[Unit]
Description=SONiC Machine Configuration Initialization
Documentation=man:machine.conf(5)
DefaultDependencies=no
After=local-fs.target
Before=sonic.target sonic-uboot-env-init.service rc-local.service
ConditionPathExists=!/host/machine.conf

[Service]
Type=oneshot
ExecStart=/usr/bin/sonic-machine-conf-init.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target

