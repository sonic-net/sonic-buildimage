#DPKG FRK
SPATH       := $($(XPCI)_SRC_PATH)
DEP_FILES   := $(SONIC_COMMON_FILES_LIST) $(PLATFORM_PATH)/xpci.mk $(PLATFORM_PATH)/xpci.dep
DEP_FILES   += $(SONIC_COMMON_BASE_FILES_LIST)
DEP_FILES   += $(shell git ls-files -- $(SPATH))

$(XPCI)_CACHE_MODE  := GIT_CONTENT_SHA
$(XPCI)_DEP_FLAGS   := $(SONIC_COMMON_FLAGS_LIST)
$(XPCI)_DEP_FILES   := $(DEP_FILES)

$(KERNEL_XPCI)_CACHE_MODE  := GIT_CONTENT_SHA
$(KERNEL_XPCI)_DEP_FLAGS   := $(SONIC_COMMON_FLAGS_LIST)
$(KERNEL_XPCI)_DEP_FILES   := $(DEP_FILES)
