SPATH       := $($(PKT_HANDLER)_SRC_PATH)
DEP_FILES   := $(SONIC_COMMON_FILES_LIST) platform/alpinevs/pkt-handler.mk platform/alpinevs/pkt-handler.dep
DEP_FILES   += $(SONIC_COMMON_BASE_FILES_LIST)
SMDEP_FILES := $(addprefix $(SPATH)/,$(shell cd $(SPATH) && git ls-files))

$(PKT_HANDLER)_CACHE_MODE  := GIT_CONTENT_SHA
$(PKT_HANDLER)_DEP_FLAGS   := $(SONIC_COMMON_FLAGS_LIST)
$(PKT_HANDLER)_DEP_FILES   := $(DEP_FILES)
$(PKT_HANDLER)_SMDEP_FILES := $(SMDEP_FILES)
$(PKT_HANDLER)_SMDEP_PATHS := $(SPATH)
