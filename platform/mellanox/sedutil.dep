SPATH := $($(SEDUTIL)_SRC_PATH)

DEP_FILES := $(SONIC_COMMON_FILES_LIST) $(PLATFORM_PATH)/sedutil.mk $(PLATFORM_PATH)/sedutil.dep
DEP_FILES += $(SONIC_COMMON_BASE_FILES_LIST)
