#!/bin/bash

# Load the common functions
source /usr/bin/TS

find_num_ebgp_neighbors
neighbor_count=$?
check_not_installed
not_installed=$?

check_installed
installed=$?

if [[ $neighbor_count -eq 0 ]];
then 
  echo "System Mode: No external neighbors"
elif [[ $installed -eq 0 ]];
then
  echo "System Mode: Normal"
elif [[ $not_installed -eq 0 ]];
then
  echo "System Mode: Maintenance"
else
  echo "System Mode: Not consistent"
fi
