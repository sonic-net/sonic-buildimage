[Unit]
Description=RestAPI container
Requires=config-setup.service
After=config-setup.service
BindsTo=sonic.target
After=sonic.target

[Service]
User=root
ExecStartPre=/usr/local/bin/restapi.sh start
ExecStart=/usr/local/bin/restapi.sh wait
ExecStop=/usr/local/bin/restapi.sh stop
RestartSec=30

[Install]
WantedBy=sonic.target
